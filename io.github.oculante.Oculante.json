{
  "app-id": "io.github.oculante.Oculante",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "23.08",
  "sdk": "org.freedesktop.Sdk",
  "sdk-extensions": ["org.freedesktop.Sdk.Extension.rust-stable"],
  "command": "oculante",
  "finish-args": [
    "--share=ipc",
    "--share=network",
    "--device=dri",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--filesystem=host"
  ],
  "build-options": {
    "append-path": "/usr/lib/sdk/rust-stable/bin"
  },
  "modules": [
    {
      "name": "oculante",
      "buildsystem": "simple",
      "build-options": {
        "env": {
          "CARGO_HOME": "/run/build/oculante/cargo"
        }
      },
      "build-commands": [
        "cargo --offline fetch --manifest-path Cargo.toml --verbose",
        "cargo --offline build --release --verbose",
        "install -Dm644 ./res/oculante.desktop /app/share/applications/$FLATPAK_ID.desktop",
        "install -Dm755 ./target/release/oculante -t /app/bin/"
      ],
      "sources": [
        {
          "type": "archive",
          "archive-type": "tar-gzip",
          "url": "https://github.com/woelper/oculante/archive/refs/tags/0.8.23.tar.gz",
          "sha256": "fa3826727db01a6472762de2444c195bd0db31936f8041481c487029b7cf2b34"
        },
        "cargo-sources.json"
      ]
    }
  ]
}
